{
  "name": "qqol",
  "displayName": "qqol",
  "description": "",
  "version": "0.0.6",
  "author": {
    "name": "Qwinci"
  },
  "publisher": "Qwinci",
  "license": "MIT",
  "repository": "https://github.com/Qwinci/vscode-qqol",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:qqol.backspaceLeft"
  ],
  "contributes": {
    "keybindings": [
      {
        "command": "qqol.backspaceLeft",
        "key": "backspace",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "properties": {
        "qqol.trimIndentOnlyLinesOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Remove lines that contain only indentation when saving."
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "eslint": "^9.39.1",
    "@eslint/js": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",

    "@types/mocha": "^10.0.10",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.105.0",

    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
